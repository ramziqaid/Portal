@model Portal.Areas.Order.Data.Model.Amendment

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Amendment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @*<input asp-for="Type" class="form-control" />*@
                <span asp-validation-for="Type" class="text-danger"></span>
                
                    Check In:   @Html.RadioButton("Type", "CheckIn")
 
                    Check Out: @Html.RadioButton("Type", "CheckOut") 
                
                </div>
                <div class="form-group">
                    <label asp-for="AmendmentReasonId" class="control-label"></label>
                    <select asp-for="AmendmentReasonId" class="form-control" asp-items="ViewBag.AmendmentReasonId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="MonthYear" class="control-label"></label>
                    <input asp-for="MonthYear" class="form-control" />
                    <span asp-validation-for="MonthYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MonthDate" class="control-label"></label>
                    <input asp-for="MonthDate" class="form-control" />
                    <span asp-validation-for="MonthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MonthDay" class="control-label"></label>
                    <input asp-for="MonthDay" class="form-control" />
                    <span asp-validation-for="MonthDay" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" >
                    </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div> 
               
                <div class="form-group">
                    <label asp-for="FilePath" class="control-label"></label>
                    <input asp-for="FilePath" class="form-control" />
                    <span asp-validation-for="FilePath" class="text-danger"></span>
                </div>
                 
             
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
