@model EfCoreGenericRepository.Models.Amendment

@{
    ViewData["Title"] = "Edit";
}

 
<hr />
<div class="row orderForm">
    
    <form asp-action="Edit" method="post" asp-controller="Amendments" class="form-horizontal" role="form">
        <div class="col-md-12">
            <h3 class="col-md-offset-2">Edit Amendment @Model.ID</h3>
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="ID" />

            <div class="form-group">
                <label asp-for="SelectDate" class="col-md-2 control-label"></label>
                <div class="col-md-6 input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy">
                    <input type="text" asp-for="SelectDate" id="dpDateNow" class="form-control " />
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Type" class="control-label col-md-2 "></label>
                <div class="col-md-6">
                    <div class="radio-inline">
                        <input type="radio" asp-for="Type" value="CheckIn" />
                        <label id="labelID" runat="server" for="">Check In</label>
                    </div>
                    <div class="radio-inline">
                        <input type="radio" asp-for="Type" value="CheckOut" />
                        <label id="ckout" runat="server" for="check_out">Check Out</label>
                    </div>
                </div>
            </div> 


            <div class="form-group">
                <label asp-for="AmendmentReasonId" class="control-label  col-md-2"></label>
                <div class="col-md-6">
                    <select asp-for="AmendmentReasonId" class="form-control" asp-items="ViewBag.AmendmentReasonId"></select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Time" class="col-md-2 control-label"></label>
                <div class="input-group bootstrap-timepicker timepicker col-md-6">
                    <input asp-for="Time" class="form-control" id="timepicker1" />
                    <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Request.Amendments[0].Description" class="control-label col-md-2"></label>
                <div class="col-md-6">
                    <textarea asp-for="Request.Amendments[0].Description" class="form-control">
                </textarea>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="FilePath" class="control-label"></label>
                <input asp-for="FilePath" class="form-control" />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>


            <div class="form-group">
                <a asp-action="Index" asp-controller="Amendments"  class="btn btn-danger">Back to List</a>
                
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </form>


</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
